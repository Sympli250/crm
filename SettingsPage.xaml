<Page x:Class="LutecIA.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Padding="12">
        <StackPanel Spacing="8">
            <TextBlock Text="Paramètres" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="OpenAI API: intégré en dur pour la démo." TextWrapping="Wrap"/>
            <ComboBox Header="Modèle" SelectedIndex="0">
                <ComboBoxItem Content="gpt-4o-mini"/>
                <ComboBoxItem Content="gpt-4o"/>
            </ComboBox>
            <ToggleSwitch Header="Thème sombre automatique" IsOn="True"/>
            <InfoBar x:Name="SavedInfo" IsOpen="False"/>
        </StackPanel>
    </Grid>
</Page>
